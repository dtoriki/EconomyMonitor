<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:periods="clr-namespace:EconomyMonitor.Wpf.MVVM.Controls.Periods"
                    xmlns:header="clr-namespace:EconomyMonitor.Wpf.MVVM.ViewModels.Header">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/EconomyMonitor.Wpf;component/Resources/Views/Periods/PeriodsViews.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <periods:PeriodsGrid x:Key="PeriodsGrid"></periods:PeriodsGrid>
    
    <header:HeaderMenuViewModel x:Key="HeaderMenuViewModel">
        <header:HeaderMenuViewModel.Items>
            <header:HeaderMenuItem IsSelected="True" IconWithText="{StaticResource CONTROL_BUTTON_ICON_WITH_TEXT}"/>
            <header:HeaderMenuItem IconWithText="{StaticResource PERIOD_BUTTON_ICON_WITH_TEXT}" UIElement="{StaticResource PeriodsGrid}"/>
        </header:HeaderMenuViewModel.Items>
    </header:HeaderMenuViewModel>
    
</ResourceDictionary>
