<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:primitives="clr-namespace:EconomyMonitor.Wpf.MVVM.Primitives">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/EconomyMonitor.Wpf;component/Resources/Properties/Icons.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/EconomyMonitor.Wpf;component/Resources/Properties/Literals.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <primitives:IconWithText x:Key="ACCEPT_BUTTON" Icon="{StaticResource CHECK_ICON}" Text="{StaticResource ACCEPT}"/>
    <primitives:IconWithText x:Key="SAVE_BUTTON" Icon="{StaticResource SAVE_ICON}" Text="{StaticResource SAVE}"/>
    <primitives:IconWithText x:Key="CANCEL_BUTTON" Icon="{StaticResource CLOSE_ICON}" Text="{StaticResource CANCEL}"/>

</ResourceDictionary>